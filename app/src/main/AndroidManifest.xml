<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.tonyshkurenko.decoratortest">

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme.NoActionBar">
    <activity android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name=".SubWithToolbarActivity"
        android:label="@string/title_activity_sub_with_toolbar"
        android:parentActivityName=".MainActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="io.github.tonyshkurenko.decoratortest.MainActivity"/>
    </activity>
    <activity
        android:name=".SubFullScreenActivity"
        android:label="@string/title_activity_sub_full_screen"
        android:parentActivityName=".MainActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="io.github.tonyshkurenko.decoratortest.MainActivity"/>
    </activity>
    <activity
        android:name=".SubFullScreenWithToolbarActivity"
        android:label="@string/title_activity_full_screen_with_toolbar"
        android:parentActivityName=".MainActivity"
        android:theme="@style/AppTheme.NoActionBar">
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value="io.github.tonyshkurenko.decoratortest.MainActivity"/>
    </activity>
  </application>

</manifest>